<Page x:Class="Warehouse1.Views.ManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:viewmodels="clr-namespace:Warehouse1.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ManagerViewModel}"
      mc:Ignorable="d"
      Title="Рабочее место менеджера" Height="600" Width="1000">

    <Grid Margin="10" Background="{DynamicResource WindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="10" Background="Transparent">
            <StackPanel Orientation="Horizontal">
                <ComboBox ItemsSource="{Binding Warehouses}"
                          SelectedItem="{Binding SelectedWarehouse}"
                          DisplayMemberPath="DisplayName"
                          materialDesign:HintAssist.Hint="Выберите склад"
                          Width="200" Margin="0,0,10,0"/>

                <TextBox Text="{Binding SearchText}"
                         materialDesign:HintAssist.Hint="Поиск товара..."
                         Width="300" Margin="0,0,10,0"/>

                <Button Command="{Binding SearchCommand}" Content="Найти" Padding="8"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding SearchResults}"
                  SelectedItem="{Binding SelectedRow}"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="All"
                  Margin="0,8,0,8"/>
    </Grid>
</Page>
