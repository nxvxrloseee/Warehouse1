<Page x:Class="Warehouse1.Views.ManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Warehouse1.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:viewmodels="clr-namespace:Warehouse1.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ManagerViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Рабочее место менеджера" Height="600" Width="1000">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <ComboBox ItemsSource="{Binding Warehouses}" 
                          SelectedItem="{Binding SelectedWarehouse}"
                          DisplayMemberPath="DisplayName"
                          materialDesign:HintAssist.Hint="Выберите склад"
                          Width="200" Margin="0,0,10,0"/>

                <TextBox Text="{Binding SearchText}" 
                         materialDesign:HintAssist.Hint="Поиск товара..."
                         Width="300" Margin="0,0,10,0"/>

                <Button Command="{Binding SearchCommand}" Content="Найти" Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
        </materialDesign:Card>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding SearchResults}" 
                  SelectedItem="{Binding SelectedRow}"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="All"
                  Style="{StaticResource MaterialDesignDataGrid}">
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Command="{Binding TrackPriceCommand}" 
                    Content="Зафиксировать цену" 
                    Margin="0,0,10,0"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>

            <Button Command="{Binding ExportCsvCommand}" 
                    Content="Экспорт статистики (CSV)" 
                    Style="{StaticResource MaterialDesignFlatButton}"/>
        </StackPanel>
    </Grid>
</Page>
